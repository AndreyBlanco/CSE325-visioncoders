@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        var state = await AuthStateTask;
        var user = state.User;

        var relative = Nav.ToBaseRelativePath(Nav.Uri);

        // Allow homepage to load normally
        if (relative == "" || relative == "/homepage")
            return;

        if (user?.Identity?.IsAuthenticated == true)
        {
            // Redirect ALL authenticated users to homepage
            Nav.NavigateTo("/homepage", true);
            return;
        }
        else
        {
            // Not logged in â†’ redirect to login with returnUrl
            var url = "/login";
            if (!string.IsNullOrEmpty(relative))
                url += "?returnUrl=" + Uri.EscapeDataString("/" + relative);

            Nav.NavigateTo(url, true);
        }
    }
}
