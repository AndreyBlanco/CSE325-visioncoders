@using CSE325_visioncoders.Services
@inject AuthService Auth
@inject NavigationManager Nav
@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a href="/homepage" class="lm-logo-link">
            <img src="img/lm_logo.svg" alt="LunchMate Logo" width="200">
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        <AuthorizeView>
            <NotAuthorized>
                <!-- Menú público: Login y Register -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/login">
                        <span class="bi bi-login"></span> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/register">
                        <span class="bi bi-register"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>

            <Authorized>
                <!-- Menú para Cooks/Admin -->
                <AuthorizeView Roles="cook,admin" Context="cookState">
                    <Authorized>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/cook/meals" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-meal-fill-nav-menu" aria-hidden="true"></span> Meals
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/cook/orders" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-order-fill-nav-menu" aria-hidden="true"></span> Orders
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/cook/customers" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-customer-nav-menu" aria-hidden="true"></span> Customers
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/cook/calendar" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-calendar-nav-menu" aria-hidden="true"></span> Calendar
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/cook/inventory" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-inventory-nav-menu" aria-hidden="true"></span> Inventory
                            </NavLink>
                        </div>

                        <!-- Cook/Admin profile uses /cook/profile -->
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/cook/profile" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <form method="post" action="@logoutAction">
                                <button class="nav-link btn btn-link text-start text-light" type="submit">
                                    <span class="bi bi-box-arrow-left-nav-menu"></span> Logout
                                </button>
                            </form>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- Menu for Customers -->
                <AuthorizeView Roles="customer" Context="custState">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/customer/meals" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-meal-fill-nav-menu"></span> Meals
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/customer/orders" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-order-fill-nav-menu"></span> My Orders
                            </NavLink>
                        </div>

                        <!-- Customer profile uses /customer/profile -->
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/customer/profile" Match="NavLinkMatch.Prefix">
                                <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                            </NavLink>
                        </div>
                        
                        <div class="nav-item px-3">
                            <form method="post" action="@logoutAction">
                                <button class="nav-link btn btn-link text-start text-light" type="submit">
                                    <span class="bi bi-box-arrow-left-nav-menu"></span> Logout
                                </button>
                            </form>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </Authorized>   
        </AuthorizeView>
    </nav>
</div>

@code {
    private string logoutAction = "";

    protected override void OnInitialized()
    {
        Auth.OnChange += AuthStateChanged;
        logoutAction = Nav.ToAbsoluteUri("/auth/logout?returnUrl=/").ToString();
    }

    protected override async Task OnInitializedAsync()
    {
        Auth.OnChange += AuthStateChanged;
        await Auth.HydrateAsync(); // <- hidrata desde la cookie
    }

    private void AuthStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Auth.OnChange -= AuthStateChanged;
    }
}
